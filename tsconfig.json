{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],
    "jsx": "preserve",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*",
    "./pages/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.ispec.*",
    "node_modules",
    "**/*.cy.ts"
  ]
}
